{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc build active file",
			"command": "/usr/lib/ccache/bin/gcc",
			"args": [
				"-g",
				"${workspaceFolder}/*.h",
				"${workspaceFolder}/*.c",
				"-o",
				"${fileDirname}/main",
				"-lncurses",
				"-ltinfo"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/lib/ccache/bin/gcc"
		}
	]
}